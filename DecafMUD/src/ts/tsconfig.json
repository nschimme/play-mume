{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext", // Changed from es2020
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../../dist/js", // Adjust if necessary
    "rootDir": "./",
    "declaration": true,
    "moduleResolution": "bundler" // Changed from node
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
