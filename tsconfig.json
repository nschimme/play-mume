{
    "compilerOptions": {
        "module": "commonjs", // Classic IIFE for now
        "target": "es2021",
        "lib": [
            "es2021",
            "dom"
        ],
        "strict": true,
        "preserveConstEnums": true,
        "outDir": "built",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".", // This is important for paths to work correctly
        "paths": {
            "decafmud": ["DecafMUD/src/ts/decafmud"],
            "decafmud/*": ["DecafMUD/src/ts/*"]
            // You might also want paths for other modules in src if needed
            // e.g., "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*",
        "DecafMUD/src/ts/**/*.ts", // Added the new DecafMUD TypeScript files
        "libs/*.d.ts"
    ]
}
